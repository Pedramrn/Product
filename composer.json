{
    "name": "jiro/product",
    "description": "Product catalog system with support for product options, variants and properties.",
    "authors": [
        {
            "name": "Andrew McLagan",
            "email": "andrewmclagan@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "jiro/support": "dev-master",
        "jiro/property": "dev-master",
        "jiro/variation": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "laracasts/testdummy": "~2.0"
    },    
    "autoload": {
        "psr-4": {
            "Jiro\\Product\\": "src/"
        }      
    },
    "autoload-dev": {      
        "psr-4": { 
            "Jiro\\Product\\spec\\": "spec/",
            "Jiro\\Product\\Tests\\": "tests/"
        }
    },      
    "minimum-stability": "dev"
}
